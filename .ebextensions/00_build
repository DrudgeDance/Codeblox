# .ebextensions/01_docker.config
container_commands:
  01_build_image:
    command: "docker build -t codebloxes/codeblox-prod:latest -f .docker/dockerfiles/Dockerfile ."
    leader_only: true

  02_run_container:
    command: "docker run -d -p 80:3000 codebloxes/codeblox-prod:latest"
    leader_only: true